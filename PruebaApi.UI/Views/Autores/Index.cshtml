@model IEnumerable<PruebaApi.DTO.AutoresDTO>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="container" style="display: flex; flex-direction: column; align-items: center">
        <h2>Autores</h2>

        <div>
            <button class="btn" onclick="irARegistoAutores();"> Registrar Autor</button>
            <button class="btn" onclick="irALibros();"> Ver Libros</button>
        </div>

    </div>
</div>

<hr />

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Nombre Completo
        </th>
        <th>
            Fecha de Nacimiento
        </th>
        <th>
            Ciudad de Procedencia
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CiudadProcedencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        function irARegistoAutores() {
            window.location.href = '@Url.Action("Create", "Autores")';
        }

        function irALibros() {
            window.location.href = '@Url.Action("Index", "Libros")';
        }
    </script>

}